<UserControl x:Class="desktop_translator.MVVM.View.TranslateView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:desktop_translator.MVVM.View"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="570"
             Background="Transparent"
             >

    <Border Background="#15A">

        <Grid Cursor="">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition Height="130"/>
                <RowDefinition/>
            </Grid.RowDefinitions>

            <TextBox x:Name="RawTextBox" Grid.Row="1"
                 VerticalAlignment="Top"
                 HorizontalAlignment="Center"
                 Margin="5"
                 Style="{StaticResource ModernTextBox}"
                 Text="{Binding RawText}"
                 />

            <TextBox x:Name="translatedTextBox" Grid.Row="1"
                 VerticalAlignment="Bottom"
                 HorizontalAlignment="Center"
                 Margin="5"
                 Style="{StaticResource ModernTextBox}"/>

            <Button x:Name="translateButton" Grid.Row="2"
                    Content="Translate"
                    Height="30"
                    Width="130"
                    Style="{StaticResource ViewsButtonTheme}"
                    Command="{Binding TranslateCommand}"
                    />

        </Grid>
    </Border>
</UserControl>
